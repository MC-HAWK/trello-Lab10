//Import Scanner so that we can get user input
import java.util.Scanner;

Class Numbers {
	public static void main(String[] args) {
		//create a scanner named input
		Scanner input = new Scanner(System.in);
		
		//prompt user for an integer to evaluate and pass it to the number variable
		System.out.println(Please enter an integer to check if it is odd or even: ");
		int number = input.nextInt();
		
		//If else statement that evaluates whether the user number is even or not
		if (number % 2 == 0)
			System.out.println(number + "is an even number");
		else
			System.out.println(number + "is an odd number");
	}
}
		
